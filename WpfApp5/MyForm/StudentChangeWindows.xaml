<Window x:Class="WpfApp5.MyForm.StudentChangeWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5.MyForm"
        mc:Ignorable="d"
        Title="Редактировать  студнета" Height="450" Width="800">
    <Grid 
        Name="gridStudent">
        <StackPanel >
            <TextBox Margin="5"  Text="{Binding StudentName}" />
            <Label >Имя студента </Label>
            <TextBox Margin="5"  Text="{Binding StudentAge }"> 
                
            </TextBox>
            <Label >Возраст студента</Label>

            <ComboBox  Name="cbGroup"></ComboBox>

            <Button Name="btSave" Click="btSave_Click" >Сохранить 
                в  БД</Button>
        </StackPanel>
    </Grid>
</Window>
